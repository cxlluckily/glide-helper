<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_base_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本用法"/>

            <Button
                android:id="@+id/btn_use_databinding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="使用DataBinding"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_open_photo_wall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从网络加载图片墙"/>

            <Button
                android:id="@+id/btn_open_photo_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="从本地相册加载图片墙"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_asset_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从res、Assets和SdCard中加载图片"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_load_bitmap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载圆形的Bitmap"/>

            <Button
                android:id="@+id/btn_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="显示gif图片"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_load_local_bitmap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从磁盘缓存获取Bitmap"/>

            <Button
                android:id="@+id/btn_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="从网络加载显示大图"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_blur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示高斯模糊后的图片"/>

            <Button
                android:id="@+id/btn_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="转换为黑灰色"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_blur2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对任意View的背景，进行高斯模糊效果"/>

        <Button
            android:id="@+id/btn_gif_bitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载gif图片，返回Bitmap对象（取其第一帧）"/>

        <Button
            android:id="@+id/btn_get_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取已使用的缓存大小"/>

        <Button
            android:id="@+id/btn_clear_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除所有图片缓存"/>

    </LinearLayout>
</ScrollView>